root = true

[*]
charset = utf-8
end_of_line = lf

[*.bat]
charset = shift-jis
end_of_line = crlf
trim_trailing_whitespace = true

[*.cs]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
# indent_style = tab
trim_trailing_whitespace = true

[*.json]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
